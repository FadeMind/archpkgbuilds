#/bin/sh

# arg 1:  the new package version
post_install() {
  dkms add rtl8723bs/${1%-*}
  cat << EOF
==> To build and install your modules run: dkms install rtl8723bs/${1%-*}
==> To do this automatically at startup run: systemctl enable dkms.service
EOF
}

# arg 1:  the new package version
# arg 2:  the old package version
pre_upgrade() {
  pre_remove "$2"
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  post_install "$1"
}

# arg 1:  the old package version
pre_remove() {
  # Remove modules using dkms
  [ -n "${1%-*}" ] && dkms remove rtl8723bs/${1%-*} --all &>/dev/null || true
}

# vim:set ts=2 sw=2 ft=sh et:
